<div>
  <div class="jumbotron">
    <h1>Servicios por categoría</h1>
  </div>
  
  <div class="container">
      
    <div class="card-deck">
      <% @services.each do |service| %>
      <div class='col-md-3 px-3 my-3'>
      <div class="card">
        <%= image_tag service.photos, class: 'card-img-top', style: 'height:200px'%>
        
        <div class="card-body">
          <h5 class="card-title"><%= service.name %></h5>
          <p class="card-text">Servicio a domicilio: <%= service.home %></p>
          <%= service.category %>
          <br>
          <%= service.description %>
          <br>
          <%= link_to 'Ver |', service %>
          <%= link_to 'Editar |', edit_service_path(service) %>
          <%= link_to 'Eliminar', service, method: :delete, data: { confirm: 'Estás segura?' } %>
        </div>
        <div class="card-footer">
          <small class="text-muted">USER NAME</small>
        </div>
        
      </div>
    </div>
    <% end %>
        
    </div>
    <br>
    <%= link_to 'Crear nuevo servicio', new_service_path %>
  </div>      

</div>


