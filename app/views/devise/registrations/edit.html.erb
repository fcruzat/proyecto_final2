<h2>Datos del perfil</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :Nombre_de_Usuario %><br />
    <%= f.text_field :name, autocomplete: "Nombre" %>
  </div>

  <div class="field">
    <%= f.label :País_de_residencia %><br />
    <%= f.country_select :country, autocomplete: "País de residencia" %>
  </div>

  <div class="field">
    <%= f.label :Ciudad_de_residencia %><br />
    <%= f.text_field :city, autocomplete: "Ciudad de residencia" %>
  </div>

  <div class="field">
    <%= f.label :Descripción %><br />
    <%= f.text_area :description, autocomplete: "Descripción" %>
  </div>

  <div class="field">
    <%= f.label :Foto_de_perfil %><br />
    <%= f.file_field :photo, autocomplete: "Foto de perfil" %>
</div>


<h2>Configuración</h2>



  <div class="field">
    <%= f.label :Email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "Email" %>
  </div>

  <div class="field">
    <%= f.label :Nombre %><br />
    <%= f.text_field :name, autocomplete: "Nombre" %>
  </div>

  <div class="field">
    <%= f.label :Apellido_paterno %><br />
    <%= f.text_field :lastname, autocomplete: "apellido paterno" %>
  </div>

  <div class="field">
    <%= f.label :Apellido_materno %><br />
    <%= f.text_field :lastname2, autocomplete: "apellido materno" %>
  </div>

  <div class="field">
    <%= f.label :Rut %><br />
    <%= f.number_field :rut, autocomplete: "rut" %>
  </div>

  <div class="field">
    <%= f.label :Fecha_de_nacimiento %><br />
    <%= f.number_field :born, autocomplete: "fecha de nacimiento" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :Contraseña %> <i>(Deja el campo en blanco si no quieres cambiarla)</i><br />
    <%= f.password_field :password, autocomplete: "Nueva contraseña" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres mínimo</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :Confirma_tu_nueva_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Nueva contraseña" %>
  </div>

  <div class="field">
    <%= f.label :Contraseña_actual%> <i>(Necesitamos tu contraseña actual para poder confirmar tus cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "Contraseña nueva" %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>

<h3>Eliminar mi cuenta</h3>

<p>¿Quieres eliminar tu cuenta? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás segura? Te extrañaremos :(" }, method: :delete %></p>

<%= link_to "Atrás", :back %>
